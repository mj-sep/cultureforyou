<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/profile_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-134dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent">

                    </View>

                    <ImageButton
                        android:id="@+id/backward_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/backward_button">

                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendardbold"
                        android:text="프로필"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/profile_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/edit_button">

                    </ImageButton>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent">

                    </View>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"></View>

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/profile_defalt_image"
                android:scaleType="centerCrop"></ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"></View>

        </LinearLayout>

        <ScrollView
            android:id="@+id/pf_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="닉네임"
                    android:textColor="#335292"
                    android:textSize="18sp"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"></View>

                <TextView
                    android:id="@+id/pf_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="베토벤바이러스"
                    android:textColor="@color/black"
                    android:textSize="22sp"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="기념일"
                    android:textColor="#335292"
                    android:textSize="18sp"></TextView>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/sw_anniv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/anniv_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_background_blue"></ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="15dp">

                                <TextView
                                    android:id="@+id/anniv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/pretendardbold"
                                    android:text="1월 1일"
                                    android:textColor="#191F3D"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="25dp"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/switch_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/pretendardregular"
                                    android:text="무슨 날인가요?"
                                    android:textColor="@color/background_navy">

                                </TextView>

                                <View
                                    android:layout_width="65sp"
                                    android:layout_height="wrap_content"></View>

                                <TextView
                                    android:id="@+id/pf_ed_anniv_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardregular"
                                    android:maxLines="1"
                                    android:text="결혼기념일"
                                    android:textAlignment="center"
                                    android:textColor="#10255A"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="20dp"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/switch_text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardregular"
                                    android:gravity="center_vertical"
                                    android:text="그날의 기분은 어떤가요?"
                                    android:textColor="@color/background_navy">

                                </TextView>

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent"></View>

                                <TextView
                                    android:id="@+id/anniv_mood"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardregular"
                                    android:text="즐거운"
                                    android:textAlignment="center"
                                    android:textColor="#10255A"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/anniv_off_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/sw_anniv"
                        android:layout_alignTop="@id/sw_anniv"
                        android:layout_alignRight="@id/sw_anniv"
                        android:layout_alignBottom="@id/sw_anniv"
                        android:gravity="center"

                        android:text="기념일을 입력하고 플레이리스트를 추천받아보세요"
                        android:textColor="#898989"
                        android:textSize="13sp"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="선호하는 아티스트"
                    android:textColor="#335292"
                    android:textSize="18sp"></TextView>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>

                <GridView
                    android:id="@+id/artist_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:numColumns="3" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>